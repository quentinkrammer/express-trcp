{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */  
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
  },
  "include": [
    "src/**/*.ts",
    "src**/*.js",
  ],
  "exclude": ["node_modules"]
}
